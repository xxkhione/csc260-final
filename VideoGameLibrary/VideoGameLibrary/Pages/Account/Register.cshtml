@page
@model VideoGameLibrary.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container bg-white p-8 rounded-xl shadow-lg border border-gray-200 mx-auto max-w-lg mt-10">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Create an Account</h1>
    <p class="text-center text-gray-500 mb-6">Join our community to manage your game library.</p>

    <form id="register" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
            <input asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Email" class="text-danger text-sm"></span>
        </div>
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
            <input asp-for="Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Password" class="text-danger text-sm"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="ConfirmPassword" class="text-danger text-sm"></span>
        </div>
        <div>
            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Register
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}