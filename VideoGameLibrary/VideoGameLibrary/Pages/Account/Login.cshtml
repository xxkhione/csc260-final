@page
@model VideoGameLibrary.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container bg-white p-8 rounded-xl shadow-lg border border-gray-200 mx-auto max-w-lg mt-10">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Welcome Back!</h1>
    <p class="text-center text-gray-500 mb-6">Log in to manage your game library.</p>
    <form id="login" method="post" class="space-y-4">
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
            <input asp-for="Email" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
            <input asp-for="Password" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <div class="flex items-center">
                <input asp-for="RememberMe" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">Remember me</label>
            </div>
        </div>
        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Sign in
        </button>
        <div asp-validation-summary="ModelOnly" class="mt-4 text-center text-red-500 font-medium"></div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}